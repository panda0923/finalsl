<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.androidtown.book.mission03.LoginActivity" >

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="800dp"
        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ImageView01"
        android:background="@drawable/bg_bar" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ImageView02"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ImageView01"
        android:layout_alignTop="@+id/ImageView01"
        android:layout_marginTop="14dp"
        android:text="이송이 사원"
        android:textColor="#00FFFF"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ImageView03"
        android:layout_width="800dp"
        android:layout_height="800dp"
        android:layout_alignBottom="@+id/ImageView02"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/ImageView02"
        android:layout_below="@+id/ImageView02"
        android:background="@drawable/table" />

    <ImageView
        android:id="@+id/ImageView04"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ImageView02"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/re" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ImageView04"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="126dp"
        android:ems="10"
        android:inputType="textPostalAddress" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:text="Button" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ImageView04"
        android:layout_below="@+id/ImageView04"
        android:layout_marginRight="16dp"
        android:layout_marginTop="34dp"
        android:background="#55F8F8FF"
        android:text="퇴근"
        android:textColor="#ffFFFF" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkBox2"
        android:layout_alignBottom="@+id/checkBox2"
        android:layout_alignLeft="@+id/ImageView04"
        android:background="#55F8F8FF"
        android:text="출근"
        android:textColor="#ffFFFF" />

 <ListView
     android:id="@+id/list_view"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:layout_alignLeft="@+id/ImageView02"
     android:layout_below="@+id/ImageView04" >
 </ListView>

</RelativeLayout>